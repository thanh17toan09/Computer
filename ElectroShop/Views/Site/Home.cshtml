@model IEnumerable<ElectroShop.Models.MCategory>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@Html.Action("SlideShow", "Module")
@Html.Action("ProductNew", "Module")
@Html.Action("Sale", "Module")
<div class="section">
    <!-- container -->
    <div class="container">
        @foreach (var cat in Model)
        {
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">@cat.Name</h3>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab2" class="tab-pane fade in active">
                                <div class="products-slick" data-nav="#slick-nav-2">
                                    @Html.Action("ProductHome", "Site", new { catid = cat.Id })
                                </div>
                                <div id="slick-nav-2" class="products-slick-nav"></div>
                            </div>
                            <!-- /tab -->
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
