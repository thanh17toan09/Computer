@model IEnumerable<ElectroShop.Models.MPost>


@foreach (var item in Model)
{
    <!-- product -->
    <div class="product">
        <div class="product-img">
            <img src="~/Public/library/post/@item.Img" width="120px" height="130px" alt="@item.Title">
           
        </div>
        <div class="product-body">
            <p class="product-category">@item.Topid</p>
            <h3 class="product-name"><a href="~/@item.Slug">@item.Title</a></h3>
            <h5 class="product-name"><a href="#"> @String.Format("{0:dd-MM-yyyy -  hh:mm:ss}", item.Updated_At)</a></h5>
           
            <div class="product-btns">
                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">Yêu thích</span></button>
                <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">So sánh</span></button>
                <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">Chi tiết</span></button>
            </div>
        </div>
    </div>
}