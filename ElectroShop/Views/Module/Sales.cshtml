@model IEnumerable<ElectroShop.Models.MProduct>
<div class="aside">
    <h3 class="aside-title">Sản phẩm khuyến mãi</h3>
    @foreach (var row in Model)
    {
<div class="product-widget">
    <div class="product-img">
        <img src="~/Public/library/product/@row.Image" alt="@row.Name">
    </div>
    <div class="product-body">
        <p class="product-category">@row.CateID</p>
        <h3 class="product-name"><a href="#">@row.Name</a></h3>
        <h4 class="product-price">@String.Format("{0:0,0₫}", row.ProPrice) <del class="product-old-price">@String.Format("{0:0,0₫}", row.Price)</del></h4>
    </div>
</div>}
</div>