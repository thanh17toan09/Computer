
@{
    ViewBag.Title = "Trang quản trị hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Public/admins/css/plugins/toastr/toastr.min.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row-fluid">


        <div class="span12" id="content">
            <div class="row-fluid">

                <div class="navbar">
                    <div class="navbar-inner">
                        <ul class="breadcrumb">
                            <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                            <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                            <li>
                                <a href="#">Dashboard</a>
                            </li>


                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <!-- block -->
                <div class="block">
                    <div class="navbar navbar-inner block-header">

                        <div class="pull-right">
                            <span class="badge badge-warning"></span>

                        </div>
                    </div>
                    <div class="block-content collapse in">
                        <div class="span3">
                            <div class="chart" data-percent="@ViewBag.CountOrderCancel">@ViewBag.CountOrderCancel</div>
                            <div class="chart-bottom-heading">
                                <span class="label label-info">Đơn đặt hàng mới</span>

                            </div>
                        </div>
                        <div class="span3">
                            <div class="chart" data-percent="@ViewBag.CountOrderSuccess">@ViewBag.CountOrderSuccess</div>
                            <div class="chart-bottom-heading">
                                <span class="label label-info">Đơn hàng đã hoàn thành</span>

                            </div>
                        </div>
                        <div class="span3">
                            <div class="chart" data-percent="@ViewBag.CountUser">@ViewBag.CountUser</div>
                            <div class="chart-bottom-heading">
                                <span class="label label-info">Thành viên</span>

                            </div>
                        </div>
                        <div class="span3">
                            <div class="chart" data-percent="@ViewBag.CountContactDoneReply">@ViewBag.CountContactDoneReply</div>
                            <div class="chart-bottom-heading">
                                <span class="label label-info">Liên hệ chưa trả lời</span>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>

        </div>
    </div>
    <hr>

</div>

<script>
    $(document).ready(function () {
        setTimeout(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                showMethod: 'slideDown',
                timeOut: 4000
            };
            toastr.success('Responsive Admin Theme', 'Welcome to INSPINIA');

        }, 1300);
    });
</script>
