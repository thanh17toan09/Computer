@model IEnumerable<ElectroShop.ProductCategory>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3" id="sidebar">
            <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                <li class="">
                    <a href="@Url.Action("Create","Product")"><i class="icon-chevron-right"></i> Thêm mới</a>

                </li>
                <li class="">
                    <a href="@Url.Action("Index","Product")"><i class="icon-chevron-right"></i> Danh sách</a>

                </li>
                <li class="active">

                    <a href="@Url.Action("Trash","Product")"><i class="icon-chevron-right"></i> Thùng rác(@ViewBag.demrac)</a>
                </li>
            </ul>
        </div>

        <div class="span9" id="content">
            <div class="row-fluid">
                <div class="navbar">
                    <div class="navbar-inner">
                        <ul class="breadcrumb">
                            <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                            <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                            <li>
                                <a href="#">Sản phẩm</a>
                            </li>


                        </ul>
                    </div>
                </div>
                <!-- block -->
                <div class="block">

                    <div class="block-content collapse in">
                        <div class="span12">
                            <div class="table-toolbar">
                                <div class="btn-group">

                                </div>

                            </div>

                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>
                                        <th style="width:70px ">ẢNH</th>
                                        <th>TÊN SẢN PHẨM</th>

                                        <th>CHỨC NĂNG</th>

                                        <th>ID</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var row in Model)
                                    {
                                        <tr>
                                            <th><img src="~/Public/library/product/@row.ProductImg" class="img-fluid" /></th>
                                            <td><a href="@Url.Action("Details","Product", new {Id = row.ProductId })">@row.ProductName</a></td>
                                            <td>

                                                <button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                                    <a href="@Url.Action("Undo", "Product", new { id = row.ProductId })" class="text-white"><i class="icon-retweet"></i></a>
                                                </button>
                                                <button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                                                    <a href="@Url.Action("Delete", "Product", new { id = row.ProductId })" class="text-white"><i class="icon-trash"></i></a>
                                                </button>
                                            </td>

                                            <td>@row.ProductId</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>
        </div>
    </div>
    <hr>

</div>
