@model ElectroShop.Models.MContact
@{
    ViewBag.Title = "Reply";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .input {
        width: 556px;
    }

    .select {
        width: 280px;
    }
</style>
@Html.Partial("_MessageAlert")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3" id="sidebar">
                <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">

                    <li class="">
                        <a href="@Url.Action("Index", "Contact")"><i class="icon-chevron-right"></i> Danh sách</a>

                    </li>
                    <a type="@(Model.Flag  == 1 ? "":"submit" )" class="btn btn-primary btn-sm replyde @(Model.Flag  == 1 ? "disabled":"" )">
                        <i class="fas fa-save"></i>&nbsp; Trả lời
                    </a>
                </ul>
            </div>

            <div class="span9" id="content">
                <div class="row-fluid">
                    <div class="navbar">
                        <div class="navbar-inner">
                            <ul class="breadcrumb">
                                <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                                <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                                <li>
                                    <a href="#">Liên hệ</a>
                                </li>


                            </ul>

                        </div>
                    </div>
                    <!-- block -->
                    <div class="block">

                        <div class="block-content collapse in">
                            <div class="span12">
                                <div class="table-toolbar">
                                    <div class="span10"></div>
                                    <div class="span2">
                                        <div class="btn-group">
                                            <input type="submit" value="Create" class="btn btn-primary btn-sm fas fa-plus-circle" />
                                            <a href="@Url.Action("Index","Contact")" class="btn btn-danger btn-sm"><i class="fas fa-arrow-circle-left"></i>Trở về</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-toolbar">
                                    <div class="span8">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.Created_at)
                                        @Html.HiddenFor(model => model.Status)

                                        <div class="form-group">
                                            @Html.Label("Tiêu đề liên hệ", htmlAttributes: new { @class = "control-label  col-12" })
                                            <div class="">
                                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            @Html.Label("Nội dung phản hồi", htmlAttributes: new { @class = "control-label col-12" })
                                            <div class="">
                                                @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", @rows = 3, @readonly = "readonly" })
                                                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Trả lời", htmlAttributes: new { @class = "control-label  col-12" })
                                            <div class="">
                                                @if (Model.Flag == 1)
                                                {
                                                    @Html.TextAreaFor(model => model.Reply, new { @class = "form-control", @rows = 5, @readonly = "readonly" }) }
                                                else
                                                {
                                                    @Html.TextAreaFor(model => model.Reply, new { @class = "form-control", @rows = 5 })}

                                                @Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        @*bên phải*@
                                        <div class="form-group">
                                            @Html.Label("Họ và tên", htmlAttributes: new { @class = "control-label  col-12" })
                                            <div class="">
                                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Email", htmlAttributes: new { @class = "control-label  col-12" })
                                            <div class="">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Số điện thoại", htmlAttributes: new { @class = "control-label  col-12" })
                                            <div class="">
                                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /block -->
                </div>
            </div>
        </div>
        <hr>

    </div>
}