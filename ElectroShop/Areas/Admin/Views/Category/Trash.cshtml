@model IEnumerable<ElectroShop.Models.MCategory>
@{
    ViewBag.Title = "Thùng rác danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("_MessageAlert")
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3" id="sidebar">
            <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                <li class="">
                    <a href="@Url.Action("Create","Category")"><i class="icon-chevron-right"></i> Thêm mới</a>

                </li>
                <li class="">
                    <a href="@Url.Action("Index","Category")"><i class="icon-chevron-right"></i> Danh sách</a>

                </li>
                <li class="active">
                    <a href="@Url.Action("Trash","Category")"><i class="icon-chevron-right"></i> Thùng rác</a>

                </li>
            </ul>
        </div>

        <div class="span9" id="content">
            <div class="row-fluid">
                <div class="navbar">
                    <div class="navbar-inner">
                        <ul class="breadcrumb">
                            <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                            <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                            <li>
                                <a href="#">Danh mục sản phẩm</a>
                            </li>


                        </ul>
                    </div>
                </div>
                <!-- block -->
                <div class="block">

                    <div class="block-content collapse in">
                        <div class="span12">
                            <div class="table-toolbar">
                                <div class="btn-group">

                                </div>

                            </div>

                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Cấp cha</th>
                                        <th>Ngày tạo</th>
                                        <th>Link</th>
                                        <th>Công cụ</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details","Category", new {Id = item.Id })">@item.Name</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParentId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Updated_at)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Slug)
                                            </td>
                                            <td>

                                                <a href="@Url.Action("Undo","Category",new {id = item.Id })" class="btn btn-primary btn-sm" title="Khôi phục"><i class="icon-refresh"></i></a>
                                                <a href="@Url.Action("Delete","Category",new {id = item.Id })" class="btn btn-danger btn-sm" title="Xóa"><i class="icon-trash"></i></a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>
        </div>
    </div>
    <hr>

</div>