@model ElectroShop.Models.MCategory

@{
    ViewBag.Title = "Tạo mới danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .input {
        width: 556px;
    }

    .select {
        width: 280px;
    }
</style>
@Html.Partial("_MessageAlert")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3" id="sidebar">
                <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                    <li class="active">
                        <a href="@Url.Action("Create", "Category")"><i class="icon-chevron-right"></i> Thêm mới</a>

                    </li>
                    <li class="">
                        <a href="@Url.Action("Index", "Category")"><i class="icon-chevron-right"></i> Danh sách</a>

                    </li>
                    <li class="">

                        <a href="@Url.Action("Trash", "Category")"><i class="icon-chevron-right"></i> Thùng rác(@ViewBag.demrac)</a>
                    </li>
                </ul>
            </div>

            <div class="span9" id="content">
                <div class="row-fluid">
                    <div class="navbar">
                        <div class="navbar-inner">
                            <ul class="breadcrumb">
                                <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                                <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                                <li>
                                    <a href="#">Danh mục sản phẩm</a>
                                </li>


                            </ul>

                        </div>
                    </div>
                    <!-- block -->
                    <div class="block">

                        <div class="block-content collapse in">
                            <div class="span12">
                                <div class="table-toolbar">
                                    <div class="span10"></div>
                                    <div class="span2">
                                        <div class="btn-group">
                                            <input type="submit" value="Create" class="btn btn-primary btn-sm fas fa-plus-circle" />
                                            <a href="@Url.Action("Index","Category")" class="btn btn-danger btn-sm"><i class="fas fa-arrow-circle-left"></i>Trở về</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-toolbar">
                                    <div class="span8">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label><strong class="input">Tên loại sản phẩm(<span class="text-danger">*</span>)</strong></label>
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label><strong class="input">Từ khóa SEO(<span class="text-danger">*</span>)</strong></label>
                                            @Html.TextAreaFor(model => model.Metakey, new { @class = "input" })
                                            @Html.ValidationMessageFor(model => model.Metakey, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <label><strong class="input">Mô tả(<span class="text-danger">*</span>)</strong></label>
                                            @Html.TextAreaFor(model => model.Metadesc, new { @class = "input" })
                                            @Html.ValidationMessageFor(model => model.Metadesc, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="span4">
                                        @*bên phải*@
                                        <div class="form-group">
                                            <label><strong class="select">Chủ đề cha(<span class="text-danger">*</span>)</strong></label>
                                            @Html.DropDownListFor(model => model.ParentId, (SelectList)ViewBag.ListCast, "[--None--]", new { @class = "select" })
                                            @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="form-group">
                                            <label><strong class="select">Thứ tự(<span class="text-danger">*</span>)</strong></label>
                                            @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrder, new { @class = "select" })
                                            @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="form-group">
                                            <label><strong>Trạng thái (<span class="text-danger">*</span>)</strong></label>
                                            @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Xuất bản", Value = "1" }, new SelectListItem { Text = "Chưa xuất bản", Value = "2" } }, new { @class = "select" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /block -->
                </div>
            </div>
        </div>
        <hr>

    </div>
}