@model ElectroShop.Models.MCategory

@{
    ViewBag.Title = "Chi tiết: " + @Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3" id="sidebar">
                <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                    <li class="">
                        <a href="@Url.Action("Create", "Category")"><i class="icon-chevron-right"></i> Thêm mới</a>

                    </li>
                    <li class="">
                        <a href="@Url.Action("Index", "Category")"><i class="icon-chevron-right"></i> Danh sách</a>

                    </li>
                    <li class="">

                        <a href="@Url.Action("Trash", "Category")"><i class="icon-chevron-right"></i> Thùng rác</a>
                    </li>
                </ul>
            </div>

            <div class="span9" id="content">
                <div class="row-fluid">
                    <div class="navbar">
                        <div class="navbar-inner">
                            <ul class="breadcrumb">
                                <i class="icon-chevron-left hide-sidebar"><a href='#' title="Hide Sidebar" rel='tooltip'>&nbsp;</a></i>
                                <i class="icon-chevron-right show-sidebar" style="display:none;"><a href='#' title="Show Sidebar" rel='tooltip'>&nbsp;</a></i>
                                <li>
                                    <a href="#">Danh mục sản phẩm</a>
                                </li>


                            </ul>
                        </div>
                    </div>
                    <!-- block -->
                    <div class="block">

                        <div class="block-content collapse in">
                            <div class="span12">
                                <div class="table-toolbar">
                                    <div class="btn-group">

                                        <a href="@Url.Action("Index","Category")" class="btn btn-danger btn-sm"><i class="fas fa-arrow-circle-left"></i>Trở về</a>
                                    </div>
                                </div>
                                <div class="table-toolbar">
                                    <div class="span8">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label>Tên loại sản phẩm</label>
                                            @Html.Raw(Model.Name);
                                        </div>
                                        <div class="form-group">
                                            <label>Mô tả(SEO)</label>

                                            @Html.Raw(Model.Metadesc);
                                        </div>
                                        
                                    </div>
                                    <div class="span4">
                                        <div class="form-group">
                                            <label>Ngày tạo</label>

                                            @String.Format("{0:dd:MM:yyyy -  hh:mm:ss}", Model.Updated_at)
                                        </div>
                                        <div class="form-group">
                                            <label>Từ khóa (CEO)</label>
                                            @Html.Raw(Model.Metakey);
                                        </div>


                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /block -->
                </div>
            </div>
        </div>
        <hr>

    </div>
}